# Xeno Shopify Analytics - Environment Configuration

# Shopify API Integration Mode
# Set to false for mock mode (development/testing)
# Set to true for real Shopify API calls (production)
USE_SHOPIFY_API=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/db

# JWT Configuration
SECRET_KEY=a_very_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1

# Shopify API Configuration (Required when USE_SHOPIFY_API=true)
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_API_VERSION=2023-10

# CORS Origins
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]